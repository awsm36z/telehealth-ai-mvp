# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-secure-random-secret-here

# OpenAI API Key (Get from: https://platform.openai.com/api-keys)
# IMPORTANT: Must start with 'sk-' for standard API keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# CORS Settings
CORS_ORIGIN=http://localhost:8081

# Database (PostgreSQL) - for production
# DATABASE_URL=postgresql://username:password@localhost:5432/telehealth

# Daily.co API Key for video calls (Get from: https://dashboard.daily.co/)
# Optional: App works without it in mock mode for development
DAILY_API_KEY=your-daily-api-key-here

# Sentry DSN for error monitoring (Get from: https://sentry.io/)
# Optional: App works without it, errors are logged to console
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
